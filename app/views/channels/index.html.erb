<h1>Listing channels</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Logo</th>
    <th>Ingestion url</th>
    <th>Ingestion module</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @channels.each do |channel| %>
  <tr>
    <td><%= channel.name %></td>
    <td><%= image_tag channel.logo.url(:large) %></td>
    <td><%= channel.ingestion_url %></td>
    <td><%= channel.ingestion_module %></td>
		<td> <%= form_tag(:controller => :channels, :id => channel.id, :action => :ingest, :method => :post) do |f| %>
		  	<div class="field">
		    	<%= label_tag :date %>
		    	<%= text_field_tag :date %>
			</div>
			<div class="actions">
				<%= submit_tag %>
			</div>
		<% end %>
	</td>
	<td><%= link_to 'Broadcasts', channel_broadcasts_path(channel)%></td>
    <td><%= link_to 'Show', channel %></td>
    <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
    <td><%= link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

